{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo/tsconfig.node.tsbuildinfo",
    "lib": ["ES2020"],
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["node", "jest", "vitest"]
  },
  "include": [
    "vite.config.ts",
    "jest.config.cjs",
    "eslint.config.js",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "__mocks__/**/*.cjs"
  ],
  "exclude": ["node_modules", "dist"]
}
